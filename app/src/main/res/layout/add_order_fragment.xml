<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addorder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.addorder.AddOrderFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/food_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/totalCount_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/addorder_fragment_total"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/noTacos_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/addorder_fragment_total" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/addOrder_button"
                    android:layout_width="231dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/addorder_fragment_addbutton" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
